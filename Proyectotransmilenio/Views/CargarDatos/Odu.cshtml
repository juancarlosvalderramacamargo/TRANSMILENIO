@model List<TesGestionProyectos.Models.EquiposLaicon>
@{
    ViewBag.Title = "Odu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> @ViewBag.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-table fa-fw"></i> Información de todos los equipos ODU cargados mediante reporte LAICON
                </div>
                <div class="panel-body">
                    @if (@TempData.ContainsKey("Mensaje"))
                    {
                        <Script>
                        alert('@(TempData["Mensaje"])');
                        </Script>
                    }
                    <table id="tablaEquipos" style="width:100%" class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <strong>@Html.Label("Id Laicon")</strong>
                                </th>
                                <th>
                                    <strong>@Html.Label("Model Id")</strong>
                                </th>
                                <th>
                                    <strong>@Html.Label("Model Description")</strong>
                                </th>
                                <th>
                                    <strong>@Html.Label("Serial")</strong>
                                </th>
                                <th>
                                    <strong>@Html.Label("Location Code")</strong>
                                </th>
                                <th>
                                    <strong>@Html.Label("State")</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() != 0)
                            {
                                foreach (TesGestionProyectos.Models.EquiposLaicon item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LaiconId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModelIdPLU)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModelDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Serial)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LocationCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.State)
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">
                                        <p>No se encontraron equipos.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div id='myModalContent' class="panel panel-primary" style="margin-top:20px;margin-left:20px;margin-right:20px"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tablaEquipos').DataTable({
            responsive: true
        });
    });
</script>

