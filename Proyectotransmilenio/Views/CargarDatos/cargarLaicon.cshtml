<div>
    <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">&times;</a>
        <h4>Agregar equipos en bodega con reporte LAICON</h4>
    </div>
    @using (Html.BeginForm("cargarLaicon", "Equipos", FormMethod.Post, new { enctype = "multipart/form-data", id = "formulario", name = "formulario" }))
    {
        <div class="modal-body">
            <div class="panel-body">
                @Html.AntiForgeryToken()
                <p>seleccione el archivo excel que desea cargar en TESGEStion WEB</p>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="file" id="file" name="file" accept="application/vnd.ms-excel application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" style="width:70%" />
            </div>
            <div class="modal-footer">
                <button type="reset" class="btn btn-default" data-dismiss="modal" id="btnCerrarModal"><i class="fa fa-ban" aria-hidden="true"></i> Cerrar</button>
                <button id="btnUploadFile" type="submit" class="btn btn-primary" onmouseover="this.style.cursor='pointer';" onclick="cargarArchivoLaicon()">
                    <span class="glyphicon glyphicon-upload"></span>
                    cargar
                </button>
            </div>
        </div>
    }
</div>
