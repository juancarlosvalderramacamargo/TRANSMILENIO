<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <style>
        .loader {
            position: fixed;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: url('../Content/Images/ajax-loader.gif') 50% 50% no-repeat rgb(249,249,249);
            opacity: .8;
        }
    </style>
    <script src="~/Scripts/alertify.min.js"></script>
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    @Styles.Render("~/template/css")
    @Scripts.Render("~/template/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    
</head >
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type = "button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TRANSMILENIO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="navbar-inverse sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
                <li>
                    <a href = "http://www.sitp.gov.co/ " ><i class="fa fa-wordpress fa-fw" alt="Ir al sitio oficial de SITP"></i> SITP</a>
                </li>
            </ul>
            <ul class="nav nav-second-level" id="side-menu">
                <li class="complete" id="Li_Enlaces">
                    <a href = "@Url.Action("GenerarDatos", "Home")">
                        Generador de Datos<i class="ico fa fa-cloud-download ico-green"></i>
                        <span class="desc">Esta opción permite generar datos aleatorios en la Base de Datos</span>
                    </a>
                </li>

                <li class="complete">
                    <a href = "@Url.Action("Laicon", "CargarDatos")">
                        Cargar Datos<i class="ico fa fa-cloud-upload ico-green"></i>
                        <span class="desc">Esta opción permite cargar datos en la Base de Datos</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.sidebar-collapse -->
    </div>
    <div id="page-wrapper">
        <div class="loader">
            <div style="float:left; height:50%; width:100%; margin-bottom:-50px"></div>
            <p id="textoCargaInicial" style="color:dodgerblue; text-align:center;clear:both;">Cargando Transmilenio......Por favor espere</p>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Proyecto TRANSMILENIO en ASP.NET</p>
            </footer>
        </div>
    </div>
        <script>
            $(document).ready(function () {
                $(".loader").fadeOut(3000);
            });
            $(document).on({
                ajaxStart: empezarWaitDialog("Procesando petición en TRANSMILENIO......Por favor espere"),
                ajaxStop: terminarWaitDialog()
            });
            function empezarWaitDialog(mensajeDesplegar) {
                if (mensajeDesplegar) {
                    document.getElementById('textoCargaInicial').innerText = mensajeDesplegar;
                }
                $(".loader").fadeIn("fast");
            }
            function terminarWaitDialog() {
                $(".loader").fadeOut(3000);
                document.getElementById('textoCargaInicial').innerText = "Cargando TRANSMILENIO......Por favor espere";
            }
        </script>
</body>
</html>
